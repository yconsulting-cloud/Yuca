:root{--c-bg:#fafafa;--c-bg-alt:#ffffff;--c-bg-dark:#0a0a0b;--c-bg-dark-alt:#141416;--c-bg-card:#ffffff;--c-primary:#0a0a0b;--c-primary-light:#1a1a1c;--c-accent:#00d9ff;--c-accent-light:#33e1ff;--c-accent-dark:#00b8d9;--c-accent-muted:rgba(0,217,255,.08);--c-accent-glow:rgba(0,217,255,.4);--c-text:#0a0a0b;--c-text-sec:#52525b;--c-text-ter:#a1a1aa;--c-text-inv:#ffffff;--c-border:#e4e4e7;--c-border-light:#f4f4f5;--c-success:#10b981;--ff-display:'Sora',system-ui,sans-serif;--ff-body:'Inter',-apple-system,BlinkMacSystemFont,sans-serif;--fs-xs:.75rem;--fs-sm:.875rem;--fs-base:1rem;--fs-md:1.125rem;--fs-lg:1.25rem;--fs-xl:1.5rem;--fs-2xl:2rem;--fs-3xl:2.75rem;--fs-4xl:3.5rem;--fs-hero:clamp(2.75rem,6vw,4.5rem);--sp-1:.25rem;--sp-2:.5rem;--sp-3:.75rem;--sp-4:1rem;--sp-5:1.25rem;--sp-6:1.5rem;--sp-8:2rem;--sp-10:2.5rem;--sp-12:3rem;--sp-16:4rem;--sp-20:5rem;--sp-24:6rem;--max-w:1200px;--pad:clamp(1.5rem,5vw,6%);--rad:8px;--rad-lg:16px;--rad-xl:24px;--rad-full:9999px;--shadow-sm:0 1px 2px rgba(0,0,0,.05);--shadow:0 4px 20px rgba(0,0,0,.06);--shadow-lg:0 20px 40px rgba(0,0,0,.1);--trans:300ms cubic-bezier(.4,0,.2,1);--trans-slow:500ms cubic-bezier(.4,0,.2,1)}
*,*::before,*::after{box-sizing:border-box;margin:0;padding:0}
html{scroll-behavior:smooth}
@media(prefers-reduced-motion:reduce){html{scroll-behavior:auto}*{animation-duration:.01ms!important;transition-duration:.01ms!important}}
body{font-family:var(--ff-body);font-size:var(--fs-base);line-height:1.6;color:var(--c-text);background:var(--c-bg);overflow-x:hidden;-webkit-font-smoothing:antialiased}
h1,h2,h3,h4{font-family:var(--ff-display);font-weight:600;line-height:1.15;color:var(--c-primary)}
a{color:inherit;text-decoration:none}img{display:block;max-width:100%;height:auto}button{font-family:inherit;cursor:pointer;border:none;background:none}ul{list-style:none}
:focus-visible{outline:2px solid var(--c-accent);outline-offset:2px}
::selection{background:var(--c-accent);color:var(--c-bg-dark)}

/* NAV */
.nav{position:fixed;top:0;left:0;right:0;z-index:200;display:flex;justify-content:space-between;align-items:center;padding:var(--sp-5) var(--pad);background:transparent;transition:all var(--trans-slow)}
.nav[data-scrolled="true"]{background:rgba(255,255,255,.9);backdrop-filter:blur(20px);-webkit-backdrop-filter:blur(20px);box-shadow:0 1px 0 var(--c-border)}
.nav__logo{font-family:var(--ff-display);font-size:1.5rem;font-weight:700;letter-spacing:-.02em;color:var(--c-primary)}
.nav__logo span{color:var(--c-accent)}
.nav__links{display:flex;gap:var(--sp-8);align-items:center}
.nav__link{font-size:var(--fs-sm);font-weight:500;color:var(--c-text-sec);transition:color var(--trans)}
.nav__link:hover{color:var(--c-primary)}
.nav__cta{padding:var(--sp-3) var(--sp-6);font-size:var(--fs-sm);font-weight:600;color:var(--c-bg-dark);background:var(--c-accent);border-radius:var(--rad-full);transition:all var(--trans)}
.nav__cta:hover{background:var(--c-accent-light);transform:translateY(-2px);box-shadow:0 4px 20px var(--c-accent-glow)}
.nav__burger{display:none;flex-direction:column;gap:5px;padding:var(--sp-2);z-index:401}
.nav__burger span{display:block;width:22px;height:2px;background:var(--c-primary);transition:all var(--trans)}
.nav__burger[aria-expanded="true"] span:nth-child(1){transform:rotate(45deg) translate(5px,5px)}
.nav__burger[aria-expanded="true"] span:nth-child(2){opacity:0}
.nav__burger[aria-expanded="true"] span:nth-child(3){transform:rotate(-45deg) translate(5px,-5px)}
.nav-mobile{position:fixed;top:0;right:0;z-index:400;width:min(320px,85vw);height:100vh;padding:var(--sp-24) var(--sp-8);background:var(--c-bg-alt);border-left:1px solid var(--c-border);transform:translateX(100%);transition:transform var(--trans-slow)}
.nav-mobile[data-open="true"]{transform:translateX(0)}
.nav-mobile a{display:block;padding:var(--sp-4) 0;font-size:var(--fs-md);color:var(--c-text);border-bottom:1px solid var(--c-border-light)}
.nav-mobile__cta{display:inline-block;margin-top:var(--sp-8);padding:var(--sp-4) var(--sp-8);font-size:var(--fs-sm);font-weight:600;color:var(--c-bg-dark);background:var(--c-accent);border-radius:var(--rad-full)}
.nav-overlay{position:fixed;inset:0;z-index:300;background:rgba(10,10,11,.5);opacity:0;visibility:hidden;transition:all var(--trans-slow)}
.nav-overlay[data-visible="true"]{opacity:1;visibility:visible}

/* HERO */
.hero{position:relative;min-height:100vh;display:flex;align-items:center;padding:var(--sp-24) var(--pad);overflow:hidden}
.hero__bg{position:absolute;inset:0;background:linear-gradient(180deg,#f8fafc 0%,#f1f5f9 100%)}
.hero__grid{position:absolute;inset:0;background-image:linear-gradient(var(--c-border) 1px,transparent 1px),linear-gradient(90deg,var(--c-border) 1px,transparent 1px);background-size:80px 80px;opacity:.5;mask-image:radial-gradient(ellipse 80% 50% at 50% 0%,black,transparent)}
.hero__glow{position:absolute;top:-200px;left:50%;transform:translateX(-50%);width:800px;height:600px;background:radial-gradient(ellipse,var(--c-accent-muted) 0%,transparent 70%);opacity:.6}
.hero__content{position:relative;z-index:1;max-width:750px}
.hero__badge{display:inline-flex;align-items:center;gap:var(--sp-2);margin-bottom:var(--sp-6);padding:var(--sp-2) var(--sp-4);font-size:var(--fs-xs);font-weight:600;color:var(--c-accent-dark);background:var(--c-accent-muted);border:1px solid rgba(0,217,255,.2);border-radius:var(--rad-full);opacity:0;animation:fadeUp .8s .2s forwards}
@keyframes fadeUp{to{opacity:1;transform:translateY(0)}}
@keyframes float{0%,100%{transform:translateY(0)}50%{transform:translateY(-10px)}}
[data-animate]{opacity:0;transform:translateY(20px)}
.hero__title{margin-bottom:var(--sp-6);font-size:var(--fs-hero);font-weight:700;line-height:1.05;letter-spacing:-.03em;opacity:0;transform:translateY(20px);animation:fadeUp .8s .3s forwards}

